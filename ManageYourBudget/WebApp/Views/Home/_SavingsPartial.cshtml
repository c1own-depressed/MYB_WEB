@using Application.DTOs.SavingsDTOs

@model IEnumerable<SavingsDTO>

<div class="savings-wrapper">
    <div class="category-wrapper">
        <div class="category-content">
            <div class="category-heading-wrapper">
                <div class="category-heading-name-wrapper">
                    <h2 class="category-heading">Savings</h2>
                </div>
            </div>
            <div class="expenses-wrapper">
                @foreach (var saving in Model)
                {
                    <div class="saving-item">
                        <p>Savings: @saving.SavingsName  (@saving.Amount ₴)</p>
                        <div class="saving-item-buttons">
                            <button class="btn btn-primary edit-savings-button" data-id="@saving.Id">Edit</button>
                            <button class="btn btn-danger delete-savings-button" data-id="@saving.Id">Delete</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <button type="button" class="btn btn-primary add-savings-button" data-toggle="modal" data-target="#addSavingsModal">
            + Add Savings
        </button>
    </div>
    <div class="modal fade" id="addSavingsModal" tabindex="-1" role="dialog" aria-labelledby="addSavingsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSavingsModalLabel">Add Savings</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="add-savings-form">
                        <div class="form-group">
                            <label for="savings-name">Savings Name</label>
                            <input type="text" class="form-control" id="savings-name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="savings-amount">Amount</label>
                            <input type="number" class="form-control" id="savings-amount" name="amount" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="addSavingsButton">Add</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Savings Modal -->
    <div class="modal fade" id="editSavingsModal" tabindex="-1" role="dialog" aria-labelledby="editSavingsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSavingsModalLabel">Edit Savings</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="editSavingsName">Savings Name</label>
                        <input type="text" class="form-control" id="editSavingsName">
                    </div>
                    <div class="form-group">
                        <label for="editSavingsAmount">Amount</label>
                        <input type="number" class="form-control" id="editSavingsAmount">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveEditSavingsButton">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Add Savings
        $('#addSavingsButton').click(function () {
            var newName = $('#savings-name').val();
            var newAmount = $('#savings-amount').val();

            $.ajax({
                url: '@Url.Action("AddSavings", "Home")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    SavingsName: newName,
                    Amount: newAmount
                }),
                success: function (response) {
                    $('#addSavingsModal').modal('hide');
                    location.reload();
                },
                error: function (error) {
                    alert("Error adding savings");
                }
            });
        });

        // Delete Savings
        $('.delete-savings-button').click(function () {
            var savingsId = $(this).data('id');

            if (confirm("Are you sure you want to remove this savings?")) {
                $.ajax({
                    url: '@Url.Action("RemoveSavings", "Home")' + '?savingsId=' + savingsId,
                    type: 'POST',
                    contentType: 'application/json',
                    success: function (response) {
                        location.reload();
                    },
                    error: function (error) {
                        alert("Failed to remove savings");
                    }
                });
            }
        });

        // Edit Savings
        $('.edit-savings-button').click(function () {
            var savingItem = $(this).closest('.saving-item');
            var savingsId = $(this).data('id');
            var savingsName = savingItem.find('p').text().split(' ').slice(1, -2).join(" ");
            var savingsAmount = parseFloat(savingItem.find('p').text().match(/\d+(\.\d+)?/)[0]);

            $('#editSavingsName').val(savingsName);
            $('#editSavingsAmount').val(savingsAmount);

            $('#saveEditSavingsButton').data('id', savingsId);

            $('#editSavingsModal').modal('show');
        });

        $('#saveEditSavingsButton').click(function () {
            var savingsId = $(this).data('id');
            var newName = $('#editSavingsName').val();
            var newAmount = $('#editSavingsAmount').val();

            $.ajax({
                url: '@Url.Action("EditSavings", "Home")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    Id: savingsId,
                    SavingsName: newName,
                    Amount: newAmount
                }),
                success: function (response) {
                    $('#editSavingsModal').modal('hide');
                    location.reload();
                },
                error: function (error) {
                    alert("Failed to edit savings");
                }
            });
        });

        // Close Modal
        $('#editSavingsModal').on('hidden.bs.modal', function () {
            $(this).find('form')[0].reset();
        });

        // Close Modal when Close button or Cross button is clicked
        $('#editSavingsModal .close').click(function () {
            $('#editSavingsModal').modal('hide');
        });

        $('#editSavingsModal [data-dismiss="modal"]').click(function () {
            $('#editSavingsModal').modal('hide');
        });
    });
</script>