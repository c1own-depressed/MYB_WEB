@model WebApp.Models.HomeViewModel


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Settings</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        body{
            background-color: #D9D9D9;
        }
        html {
            font-size: 16px; 
        }

        .category-wrapper {
            margin: 1rem;
            color: white;
        }

        .category-heading-wrapper {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .category-heading-name-wrapper {
            background-color: #7B7B7B;
            border-radius: 0.3125rem;
            padding: 1rem 1.5rem; 
            display: inline-block;
        }

        .category-heading {
            font-size: 2.25rem;
        }

        .category-heading-details-wrapper {
            color: burlywood;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .expenses-wrapper {
            color: burlywood;
        }

        .add-category-button {
            margin: 1rem;
            color: #1C25FF;
            
        }
    </style>
</head>
<body>
    <div class="content">
        @foreach (var category in Model.Categories)
        {
            <div class="category-wrapper">
                <div class="category-content">
                    <div class="category-heading-wrapper">
                        <div class="category-heading-name-wrapper">
                            <h2 class="category-heading">@category.Name</h2>
                        </div>
                        <div class="category-heading-details-wrapper">
                            <p>Remaining budget: @category.RemainingBudget</p>
                            <p>Planned buget: @category.PlannedBudget</p>
                        </div>  
                    </div>
                    <div class="expenses-wrapper">
                        @foreach (var expense in category.Expenses)
                        {
                            <p>Expense: @expense.ExpenseName  (@expense.Amount ₴)</p>
                        }
                    </div>
                </div>
            </div>
        }
        <button type="button" class="btn btn-primary add-category-button" data-toggle="modal" data-target="#addCategoryModal">
            + Add Category
        </button>
        <!-- Modal -->
        <div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCategoryModalLabel">Add Expense Category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="add-category-form">
                            <div class="form-group">
                                <label for="category-title">Title of Expense Category</label>
                                <input type="text" class="form-control" id="category-title" name="title" required>
                            </div>
                            <div class="form-group">
                                <label for="planned-budget">Planned Budget</label>
                                <input type="number" class="form-control" id="planned-budget" name="budget" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" form="add-category-form">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $('#add-category-form').on('submit', function(e){
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("AddExpenseCategory", "Home")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        Title: $('#category-title').val(),
                        PlannedBudget: $('#planned-budget').val()
                    }),
                    success: function(response) {
                        $('#addCategoryModal').modal('hide'); // Close modal
                        $('#add-category-form')[0].reset(); // Clear the form
                        //loadCategories();
                    },
                    error: function(error) {
                        alert("Wrong data");
                    }
                });
            });
        });
    </script>
</body>
</html>
