@model WebApp.Models.RegisterViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<!DOCTYPE html>
<html data-wf-domain="myb-site-854d38.webflow.io" data-wf-page="663aef056f80bd247597be03" data-wf-site="663aef046f80bd247597bd93" lang="en" class="w-mod-js wf-inter-n4-active wf-inter-n5-active wf-inter-n6-active wf-inter-n7-active wf-freehand-n4-active wf-active">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
        .wf-force-outline-none[tabindex="-1"]:focus {
            outline: none;
        }
    </style>
    <title>Signup</title>
    <meta content="Signup" property="og:title">
    <meta content="Signup" property="twitter:title">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta content="Webflow" name="generator">
    <link href="https://fonts.googleapis.com/" rel="preconnect">
    <link href="https://fonts.gstatic.com/" rel="preconnect" crossorigin="anonymous">
    <script src="./Signup_files/webfont.js.завантаження" type="text/javascript"></script>
    <link rel="stylesheet" href="./Signup_files/css" media="all">
    <script type="text/javascript">WebFont.load({ google: { families: ["Inter:regular,500,600,700", "Freehand:regular"] } });</script>
    <script type="text/javascript">!function (o, c) { var n = c.documentElement, t = " w-mod-"; n.className += t + "js", ("ontouchstart" in o || o.DocumentTouch && c instanceof DocumentTouch) && (n.className += t + "touch") }(window, document);</script>
    <link href="https://cdn.prod.website-files.com/img/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link href="https://cdn.prod.website-files.com/img/webclip.png" rel="apple-touch-icon">
    <style type="text/css">
        .w-webflow-badge {
            display: none !important;
        }
    </style>
    @{
        string theme = ViewBag.Theme ?? "Dark"; // За замовчуванням використовується темна тема
        string cssFileName = $"OtherPages_{theme}.css";
    }
    <link rel="stylesheet" href="~/css/SignUp.css">
</head>
<body>
    <section class="signup-section">
        <div class="container">
            <div class="signup-content">
                <h1 class="heading">@Localizer["RegisterHeader"]</h1>
                <div class="form-block w-form">
                    <form asp-action="Register" method="post" id="register-form" name="register-form" data-name="Register Form" class="signup-form" aria-label="Register Form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-line-wrapper">
                            <label for="email" class="form-field-label">@Localizer["Email"]</label>
                            <div class="text-field-wrapper">
                                <input id="email" class="form-text-field w-input" maxlength="256" name="Email" placeholder="" type="email" required="">
                            </div>
                        </div>
                        <div class="form-line-wrapper">
                            <label for="username" class="form-field-label">@Localizer["UserName"]</label>
                            <div class="text-field-wrapper">
                                <input id="username" class="form-text-field w-input" maxlength="256" name="UserName" placeholder="" type="text" required="">
                            </div>
                        </div>
                        <div class="form-line-wrapper">
                            <label for="password" class="form-field-label">@Localizer["Password"]</label>
                            <div class="text-field-wrapper">
                                <input id="password" class="form-text-field w-input" maxlength="256" name="Password" placeholder="" type="password" required="">
                            </div>
                        </div>
                        <div class="login-button">
                            <button type="submit" class="login-button-text">@Localizer["RegisterButton"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
