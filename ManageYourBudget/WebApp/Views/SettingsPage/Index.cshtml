    @{
        string theme = ViewBag.Theme ?? "Dark"; // За замовчуванням використовується темна тема
        string cssFileName = $"Settings_{theme}.css";
    }
    <link rel="stylesheet" href="~/css/@cssFileName">
   </head>
<body>
    <section class="settings-section">
        <div class="container">
            <div class="settings-content">
                <h1 class="heading">@localizer["Settings"]</h1>
                <div class="w-form">
                    <form asp-controller="SettingsPage" asp-action="SaveSettings" method="post" id="email-form" name="email-form" data-name="Email Form" method="post" class="form" data-wf-page-id="663aef056f80bd247597bdf6" data-wf-element-id="c1953f65-f1ec-12cd-93fe-4514e0d8dc3f" aria-label="Email Form">
                        <div class="div-block-3">
                            <div class="settings-option">
                                <div class="settings-label-wrapper">
                                    <div class="settings-label-text">@localizer["Language"]</div>
                                </div>
                                <div class="select-wrapper">
                                    <select id="language" name="language" data-name="language choice" class="select-field w-select">
                                        <option value="en-US" id="enOption">@localizer["English"]</option>
                                        <option value="uk-UA" id="ukOption">@localizer["Ukrainian"]</option>
                                    </select>
                                </div>
                            </div>
                            <div class="settings-option">
                                <div class="settings-label-wrapper">
                                    <div class="settings-label-text">@localizer["ChooseTheme"]</div>
                                </div>
                                <div class="select-wrapper">
                                    <select id="theme" name="theme" data-name="theme choice" class="select-field w-select">
                                        <option value="true" id="lightThemeOption">@localizer["Light"]</option>
                                        <option value="false" id="darkThemeOption">@localizer["Dark"]</option>
                                    </select>
                                </div>
                            </div>
                            <div class="settings-option">
                                <div class="settings-label-wrapper">
                                    <div class="settings-label-text">@localizer["ChooseCurrency"]</div>
                                </div>
                                <div class="select-wrapper">
                                    <select id="currency" name="currency" data-name="currency choice" class="select-field w-select">
                                        <option value="usd" id="usdOption">USD</option>
                                        <option value="uah" id="uahOption">UAH</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="save-button" onclick="submitForm()">
                            <div class="save-button-text">@localizer["Save"]</div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    

    <script>
        var isLightTheme = '@Model.IsLightTheme.ToString().ToLower()';
        var language = '@Model.Language.ToLower()';
        var currency = '@Model.Currency.ToLower()';

        // Select Language
        if (language === 'en-us') {
            document.getElementById('enOption').setAttribute('selected', 'selected');
        } else if (language === 'uk-ua') {
            document.getElementById('ukOption').setAttribute('selected', 'selected');
        }

        // Select Theme
        if (isLightTheme === 'true') {
            document.getElementById('lightThemeOption').setAttribute('selected', 'selected');
        } else {
            document.getElementById('darkThemeOption').setAttribute('selected', 'selected');
        }

        // Select Currency
        if (currency === 'uah') {
            document.getElementById('uahOption').setAttribute('selected', 'selected');
        } else {
            document.getElementById('usdOption').setAttribute('selected', 'selected');
        }
        function submitForm() {
            document.getElementById("email-form").submit();
        }
    </script>
</body>
