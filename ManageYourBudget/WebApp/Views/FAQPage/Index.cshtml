@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["FAQTitle"];
}

<!DOCTYPE html>
<html>
<head>

    <title>@ViewBag.Title</title>
    @{
        string theme = ViewBag.Theme ?? "Light"; // За замовчуванням використовується темна тема
        string cssFileName = $"OtherPages_{theme}.css";
    }


    <link rel="stylesheet" href="~/css/@cssFileName">
</head>
<body>

    <h1>@Localizer["FAQ"]</h1>

    <div class="faq-section">
        <h2>@Localizer["Question1"]</h2>
        <button class="toggle-button" onclick="toggleVisibility(this, '@Localizer["ShowAnswer"]', '@Localizer["HideAnswer"]')">@(Localizer["ShowAnswer"])</button>
        <p>@Localizer["Answer1"]</p>
    </div>

    <div class="faq-section">
        <h2>@Localizer["Question2"]</h2>
        <button class="toggle-button" onclick="toggleVisibility(this, '@Localizer["ShowAnswer"]', '@Localizer["HideAnswer"]')">@(Localizer["ShowAnswer"])</button>
        <p>@Localizer["Answer2"]</p>
    </div>

    <div class="faq-section">
        <h2>@Localizer["Question3"]</h2>
        <button class="toggle-button" onclick="toggleVisibility(this, '@Localizer["ShowAnswer"]', '@Localizer["HideAnswer"]')">@(Localizer["ShowAnswer"])</button>
        <p>@Localizer["Answer3"]</p>
    </div>
    <script>
        function toggleVisibility(button, showText, hideText) {
            var paragraph = button.nextElementSibling;
            if (paragraph.style.display === 'none' || paragraph.style.display === '') {
                paragraph.style.display = 'block';
                button.textContent = hideText;
            } else {
                paragraph.style.display = 'none';
                button.textContent = showText;
            }
        }
    </script>

</body>
</html>
