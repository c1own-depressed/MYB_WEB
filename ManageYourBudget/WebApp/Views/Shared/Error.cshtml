@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model ErrorViewModel
@{
    ViewData["Title"] = Localizer["ErrorTitle"];
}

<h1 class="text-danger">@Localizer["ErrorHeading"]</h1>
<h2 class="text-danger">@Localizer["ErrorMessage"]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@Localizer["RequestIdLabel"]:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@Localizer["DevelopmentModeHeading"]</h3>
<p>
    @Localizer["DevelopmentModeDescription1"]
</p>
<p>
    <strong>@Localizer["DevelopmentEnvironmentWarning"]</strong>
    @Localizer["DevelopmentEnvironmentDescription2"]
    <strong>@Localizer["DevelopmentEnvironmentSetup"]</strong>
    <strong>ASPNETCORE_ENVIRONMENT</strong> @Localizer["DevelopmentEnvironmentValue"]
    @Localizer["DevelopmentEnvironmentRestart"]
</p>
