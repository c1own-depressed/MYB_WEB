
# All files
[*]
indent_style = space

# Xml files

# SA1200: Using directives should be placed correctly
dotnet_diagnostic.SA1200.severity = silent

# SA1633: File should have header
dotnet_diagnostic.SA1633.severity = silent

# SA1600: Elements should be documented
dotnet_diagnostic.SA1600.severity = silent

# SA1309: Field names should not begin with underscore
dotnet_diagnostic.SA1309.severity = silent

# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = silent

# SA0001: XML comment analysis disabled
dotnet_diagnostic.SA0001.severity = silent

# MVC1000: Use of IHtmlHelper.{0} should be avoided
dotnet_diagnostic.MVC1000.severity = silent

# CS0618: Type or member is obsolete
dotnet_diagnostic.CS0618.severity = silent

# S1135: Track uses of "TODO" tags
dotnet_diagnostic.S1135.severity = silent

# S125: Sections of code should not be commented out
dotnet_diagnostic.S125.severity = silent

# S1075: URIs should not be hardcoded
dotnet_diagnostic.S1075.severity = silent

[*.xml]
indent_size = 2
